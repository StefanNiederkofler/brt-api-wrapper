{
    "name": "andyts93/brt-api-wrapper",
    "description": "PHP wrapper for BRT Rest API service",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "files": [
            "helpers.php"
        ],
        "psr-4": {
            "Andyts93\\BrtApiWrapper\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Andrea Castellini",
            "email": "and1@live.it"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs --extensions=php src tests"
    },
    "config": {
        "platform": {
            "php": "8.2.1"
        }
    },
    "require": {
        "php": ">=5.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.5",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    }
}
